      "item": [
        {
          "name": "user-create",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "var name = pm.variables.replaceIn(\"{{$randomFullName}}\")\r",
                  "console.log(name)\r",
                  "pm.environment.set(\"Full_Name\",name)\r",
                  "var password = pm.variables.replaceIn(\"{{$randomPassword}}\")    \r",
                  "console.log(password)\r",
                  "pm.environment.set(\"Password\", password)\r",
                  "var email = pm.variables.replaceIn(\"{{$randomEmail}}\")\r",
                  "console.log(email)\r",
                  "pm.environment.set(\"Email\", email)\r",
                  "const phone_number = \"01\" + Math.floor(100000000 + Math.random() * 900000000);\r",
                  "console.log(phone_number)\r",
                  "pm.environment.set(\"Phone_Number\",phone_number)\r",
                  "const nid = Math.floor(1000000000 + Math.random() * 9000000000).toString();\r",
                  "console.log(nid)\r",
                  "pm.environment.set(\"Nid\",nid)\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var response = pm.response.json()\r",
                  "pm.test(\"Status code validation\", function () {\r",
                  "    pm.response.to.have.status(201);\r",
                  "});\r",
                  "console.log(response)\r",
                  "\r",
                  "pm.environment.set(\"id\",response.user.id)\r",
                  "\r",
                  "\r",
                  "\r",
                  "var status_code = pm.response.code;\r",
                  "console.log(status_code);\r",
                  "\r",
                  "switch (status_code) {\r",
                  "    case 201:\r",
                  "        var jsondata = pm.response.json();\r",
                  "        pm.test(\"Status code is 201\", function () {\r",
                  "            pm.response.to.have.status(201);\r",
                  "        });\r",
                  "        pm.test(\"User created\", function () {\r",
                  "            pm.expect(jsondata.message).to.eql(\"User created successfully\");\r",
                  "        });\r",
                  "       \r",
                  "        pm.test(\"Full Name verify\", function () {\r",
                  "            pm.expect(jsondata.user.name).to.eql(pm.environment.get(\"Full_Name\"));\r",
                  "        });\r",
                  "        pm.test(\"Email verify\", function () {\r",
                  "            pm.expect(jsondata.user.email).to.eql(pm.environment.get(\"Email\"));\r",
                  "        });\r",
                  "        pm.test(\"Phone Number verify\", function () {\r",
                  "            pm.expect(jsondata.user.phone_number).to.eql(pm.environment.get(\"Phone_Number\"));\r",
                  "        });\r",
                  "        pm.test(\"Nid verify\", function () {\r",
                  "            pm.expect(jsondata.user.nid).to.eql(pm.environment.get(\"Nid\"));\r",
                  "        });\r",
                  "        pm.test(\"User role\", function () {\r",
                  "            pm.expect(jsondata.user.role).to.eql(\"Customer\");\r",
                  "        });\r",
                  "        break;\r",
                  "    case 400:\r",
                  "        pm.test(\"Bad Request\", function () {\r",
                  "            pm.response.to.have.status(400);\r",
                  "        });\r",
                  "        break;\r",
                  "    case 401:\r",
                  "        pm.test(\"Unauthorized\", function () {\r",
                  "            pm.response.to.have.status(401);\r",
                  "        });\r",
                  "        break;\r",
                  "}\r",
                  ""
                ],
